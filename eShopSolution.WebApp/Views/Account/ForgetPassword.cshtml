
@{
    ViewData["Title"] = "ForgetPassword";
}

<div class="span9">
    <ul class="breadcrumb">
        <li><a href="/" localize-content>Home</a> <span class="divider">/</span></li>
        <li class="active" localize-content>Forget password?</li>
    </ul>
    <h3 localize-content>FORGET YOUR PASSWORD?</h3>
    <hr class="soft" />

    <div class="row">
        <div class="span9" style="min-height:900px">
            <div class="well">
                <h5 localize-content>Reset your password</h5><br />
                
                    <p>
                        <localize>Please enter the email address for your account. A verification code will be sent to you. Once you have received the verification code, you will be able to choose a new password for your account.</localize> 
                        
                    </p>
                <br /><br /><br />
                <form>
                    <div class="control-group">
                        <label class="control-label" for="inputEmail1">E-mail</label>
                        <div class="controls">
                            <input class="span3" type="text" id="inputEmail1" placeholder="Email">
                        </div>
                    </div>
                    <div class="controls">
                        <button type="submit" class="btn block" localize-content>Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

